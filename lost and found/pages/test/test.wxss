
/* 主页 */  
.home {  
  position:fixed; 
  width: 750rpx;  
  height: 100%;  
  background-color: #ede2ad;  
  z-index: 1;  
  transition: All 0.4s ease;  
  -webkit-transform-origin: 0 100%;
  /* -webkit-transition: All 0.4s ease; */
  overflow-y:scroll;
  overflow-x: hidden;
}  
.home .icon_user {  
  width: 120rpx;  
  height: 120rpx;  
  margin-left: 20rpx;  
  margin-top: 20rpx;  
  border-radius:118rpx;
   position: absolute;  
 box-shadow: 0rpx 0rpx 14rpx grey;  
}  
.siderbar-image{
   display: inline-block;
  width: 130rpx;
  height: 130rpx;
  border-radius: 128rpx;
  margin-top: 20rpx;
